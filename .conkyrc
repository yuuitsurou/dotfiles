conky.config = {
    alignment = 'top_right',
    gap_x = 50,
    gap_y = 50,
    background = true,
    double_buffer = true,
    no_buffers = true,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'gray',
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
    draw_shades = false, 
    font = 'Migu 1M:size=10',
    use_xft = true,
    override_utf8_locale = yes,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    update_interval = 1.0,
    uppercase = false,
    show_graph_scale = true,
    show_graph_range = false,
    xftalpha = 1,
    net_avg_samples = 2,
    own_window = true,
    own_window_transparent = true,
    own_window_class = 'Conky',
    own_window_type = 'override',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_colour = 'black',
    own_window_argb_visual = true,
    own_window_argb_value = 100,
    stippled_borders = 0,
    use_spacer = 'none',
    minimum_width  = 200
}
conky.text = [[
${voffset 5}${color}$alignc${font Migu 1M:size=12}${time %H:%M}   $font
${voffset 5}${color}${alignc}${time %Y年 %b %-d日 (%a)}
#
${voffset 20}${goto 40}${color}CPU${font DejaVu Sans Mono:bold:size=8}$alignr$cpu%
${voffset 5}${goto 40}$font$color2${top name 1}$alignr$color${top cpu 1}%
${goto 40}$color2${top name 2}$alignr$color${top cpu 2}%
${goto 40}$color2${top name 3}$alignr$color${top cpu 3}%
${goto 40}$color2${top name 4}$alignr$color${top cpu 4}%
# ${goto 40}$color2${top name 5}$alignr$color${top cpu 5}%
#
${voffset 10}${goto 40}${color}RAM${font DejaVu Sans Mono:bold:size=8}$alignr$mem$font
${goto 40}${voffset 5}$color2${top_mem name 1}$alignr$color${top_mem mem_res 1}
${goto 40}$color2${top_mem name 2}$alignr$color${top_mem mem_res 2}
${goto 40}$color2${top_mem name 3}$alignr$color${top_mem mem_res 3}
${goto 40}$color2${top_mem name 4}$alignr$color${top_mem mem_res 4}
# ${goto 40}$color2${top_mem name 5}$alignr$color${top_mem mem_res 5}
#
${voffset 10}${goto 40}${color}Swap${font DejaVu Sans Mono:bold:size=8}$alignr${swap}/ ${swapfree}
${voffset 10}${color2}${alignr}${execi 1200 whoami}@${nodename}
${alignr}${color2}${font DejaVu Sans Mono:size=8}uptime: ${color}${uptime_short}
${voffset 5}${color2}${font DejaVu Sans Mono:size=8}${alignr}kernel: ${color}${kernel}
]]

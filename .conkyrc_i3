conky.config = {
    alignment = 'top_right',
    gap_x = 10,
    gap_y = 60,
    background = false,
    double_buffer = true,
    no_buffers = true,
    border_width = 1,
    cpu_avg_samples = 4,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'gray',
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
    draw_shades = false, 
    font = 'DejaVu Sans Mono:size=10',
    use_xft = true,
    override_utf8_locale = yes,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    update_interval = 1.0,
    uppercase = false,
    show_graph_scale = true,
    show_graph_range = false,
    xftalpha = 1,
    net_avg_samples = 2,
    own_window = true,
    own_window_transparent = true,
    own_window_class = 'Conky',
    own_window_type = 'override',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_colour = 'black',
    own_window_argb_visual = true,
    own_window_argb_value = 100,
    stippled_borders = 0,
    use_spacer = 'none',
    minimum_height = 5,
    minimum_width  = 5
}
conky.text = [[
${color #9BCD9B}$nodename
${color #9BCD9B}$sysname $kernel $machine
${color #9BCD9B}Uptime: $uptime
${color #9BCD9B}CPU Frequency: ${freq_g}GHz
${color #9BCD9B}CPU Usage: $cpu% ${cpubar}
${color #9BCD9B}${cpugraph cpu0 000000 7f8ed3}
${color #9BCD9B}RAM Usage: $mem/$memmax $membar
${color #9BCD9B}SWAP Usage: $swap/$swapmax $swapbar
$hr
${color #9BCD9B}File systems:
 / ${fs_used /}/${fs_size /} ${fs_bar 6 /}
${diskiograph}
$hr
${color #9BCD9B}Networking:
upload:           download:
${upspeedgraph enp0s3 32,140} ${downspeedgraph enp0s3 32,140}
$hr
${color #9BCD9B}Top
${color #9BCD9B}Name              PID   CPU%   MEM%
${color #9BCD9B}${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color #9BCD9B}${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color #9BCD9B}${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color #9BCD9B}${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
]]
